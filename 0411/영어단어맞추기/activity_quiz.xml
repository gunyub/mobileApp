<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 퀴즈 타이틀 -->
        <TextView
            android:id="@+id/tvQuizTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어 퀴즈"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 퀴즈 문제 -->
        <TextView
            android:id="@+id/tvQuizQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q. abandon의 뜻은?"
            android:textSize="18sp"
            android:layout_marginBottom="24dp" />

        <!-- 선택지 버튼들 -->
        <Button
            android:id="@+id/btnChoice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버리다"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnChoice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="걷다"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnChoice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사랑하다"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnChoice4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="먹다"
            android:layout_marginBottom="24dp"/>

        <!-- 결과 표시 -->
        <TextView
            android:id="@+id/tvQuizResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#009688"
            android:layout_marginBottom="24dp"/>

        <!-- 돌아가기 -->
        <Button
            android:id="@+id/btnBackFromQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메인으로 돌아가기" />
    </LinearLayout>
</ScrollView>
